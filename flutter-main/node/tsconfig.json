{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2015"
    ],
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "typeRoots": [
      "node_modules/@types",
      "typings"
    ],
    "outDir": "dist",
    "rootDirs": [
      "src",
      "dts"
    ]
  },
  "include": [
    "src/**/*",
    "migrations/**/*"
  ],
  "exclude": [
    "node_modules",
  ]
}
